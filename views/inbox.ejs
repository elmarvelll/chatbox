<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Chatbox</title>
  </head>
  <body class="body">    
    <nav class="navbar navbar-expand bg-body-tertiary p-2">
      <div class="container-fluid">
        <a class="navbar-brand">Chatbox</a>
        <div class="search_container me-auto">
          <input type="search" name="search" class="me-auto" class="search" id="search" autocomplete="off" placeholder="Search Chatbox">
          <ul class="searchDivs" id="searchDivs">
            <li class="searchDiv">
              No Search Results 
            </li>
          </ul>
        </div>
          <ul class="navbar-nav" >
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/chatbox">Home</a>
            </li>
            <li class="nav-item ">
              <a class="nav-link" href="">Notifications</a>
            </li>
            <li class="nav-item ">
              <a class="nav-link" href="">Messages</a>
            </li>
            <li class="nav-item ">
              <a class="nav-link" href="/chatbox/search/<%=UserName%>">Profile</a>
            </li>
          </ul>
      </div>
    </nav>


    <section class="inbox_section">
     <div class="messages">
        <div class="user_message">
            <%= UserName%>
        </div>
        <p>user1</p>
        <p>user 2</p>
        <p>user 3</p>
    </div>
    <div class="chat_container" id="chat_container">
            <div class="reciever_title">
               <%= reciever %>
            </div>
            <div class="chat_area" id="chat_area">

            </div>

            <form id="message_form">
                <div class="send_message">
                  <input type="text" autofocus="off" autocomplete="off" name="message" id="chat" class="chatInput">
                  <button type="submit" class="message_button" id="message_button">Send</button>
                </div>
            </form>
        </div>

    </div>
     
    </section>


    <%- include('partials/footer') %>
